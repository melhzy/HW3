@{ViewBag.Title = "Home Page";}

@model IEnumerable<Models.IndivDemographics>
@using GridMvc.Html

<div class="jumbotron">
    <h1>Name List</h1>
    <div>
        @if (Model != null && Model.Count() > 0)
        {
            <p class="panel panel-primary pre-scrollable">
                @Html.Grid(Model).Named("IndividualDemographicsData").Columns(columns =>
            {
                columns.Add(col => col.FirstName).Titled("First Name");
                columns.Add(col => col.LastName).Titled("Last Name");
                columns.Add(col => col.Sex).Titled("Sex");
                columns.Add(col => col.Address).Titled("Address");
            }).WithPaging(3).Sortable()
            </p>
        }
    </div>
</div>

